<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
   <children>
      <Label fx:id="labelScore" layoutX="387.0" layoutY="227.0" text="Score: " textFill="#d80d2c">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="buttonStart" layoutX="27.0" layoutY="155.0" mnemonicParsing="false" onAction="#startGame" prefHeight="125.0" prefWidth="129.0" text="Start game" />
      <Button fx:id="buttonLogout" layoutX="500.0" layoutY="29.0" mnemonicParsing="false" onAction="#logout" text="Logout" />
      <Label fx:id="labelWait" layoutX="142.0" layoutY="94.0" prefHeight="39.0" prefWidth="359.0" text="Wait for other players to join ...">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="labelRound" layoutX="384.0" layoutY="146.0" text="Round: " textFill="#dc1313">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="labelCategory" layoutX="384.0" layoutY="182.0" text="Category: " textFill="#c20a0b">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="textboxWord" layoutX="197.0" layoutY="179.0" />
      <Button fx:id="buttonSendWord" layoutX="217.0" layoutY="212.0" mnemonicParsing="false" onAction="#sendWord" prefHeight="49.0" prefWidth="108.0" text="Send word" />
   </children>
</AnchorPane>
